									}
								}
							],
							"outputs": [
								{
									"referenceName": "ds_outputdataset",
									"type": "DatasetReference",
									"parameters": {
										"SinkFiles": {
											"value": "@concat(item().name,'_',formatDateTime(utcnow(), 'yyyy-dd-MM'))",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
