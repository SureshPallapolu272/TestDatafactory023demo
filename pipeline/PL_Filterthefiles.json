{
	"name": "PL_Filterthefiles",
	"properties": {
		"activities": [
			{
				"name": "Get FIles",
				"type": "GetMetadata",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "ds_inputcsvfiles",
						"type": "DatasetReference"
